	<select id="queryDoctorByKsSchedual" resultType="com.spring.entity.DoctorByKsSchedual">
		select dctcode,dctname from mzhjsf.dbo.dctcode where dctks = #{ks}
	</select>

	<select id="queryDoctorGhDetail" resultType="com.spring.entity.DoctorGhDetail">
		select dctcode,dctname,pzf+zjf amount from mzhjsf.dbo.dctcode where dctcode = #{dctcode} and dctks = #{ks}
	</select>

	<insert id="ghInGhbase" parameterType="com.spring.result.AppointmentGhBody">
            insert into gh.dbo.ghbase (blid,zwname,sfz,ghks,ghdct,patid,timeStart,timeEnd,Tdate,pbmxid,Ttype,yyhx,tradingChannels,payNumber) values (13933779655,#{memberName},#{idcard},#{ksdm},#{ysdm},#{patid},#{timeStart},#{timeEnd},#{date},#{pbmxid},#{type},#{yyhx},#{tradingChannels},#{payNumber})
    </insert>

	<insert id="ghInGhmx" parameterType="com.spring.result.AppointmentGhBody">
            insert into gh.dbo.ghmx (ghid,ghdct,ghks,zwdate,sfmoney,patid,timeStart,timeEnd,Tdate,pbmxid,Ttype,yyhx,tradingChannels,payNumber) values (583188052,#{ysdm},#{ksdm},#{payTime},#{subFee},#{patid},#{timeStart},#{timeEnd},#{date},#{pbmxid},#{type},#{yyhx},#{tradingChannels},#{payNumber})
    </insert>

